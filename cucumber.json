{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "features"
        ],
        "require": [
            "features/apis/*.ts",
            "features/page_objects/*.ts",
            "features/step_definitions/*.ts",
            "features/support/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json"
        ]
    }
}